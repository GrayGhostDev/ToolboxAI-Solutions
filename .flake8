[flake8]
# Maximum line length
max-line-length = 120

# Errors and warnings to ignore
extend-ignore = 
    # Whitespace before ':' (conflicts with black)
    E203,
    # Line break before binary operator (conflicts with black)
    W503,
    # Import not at top of file (used intentionally in some places)
    E402,
    # Module level import not at top (used intentionally)
    E402,
    # Ambiguous variable name (legacy code)
    E741

# Errors to always check
select = 
    E,F,W,C90

# Files and directories to exclude from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    .basedpyright,
    node_modules,
    migrations,
    # Exclude auto-generated files
    *_pb2.py,
    *_pb2_grpc.py

# Complexity
max-complexity = 15

# Per-file ignores for specific patterns
per-file-ignores =
    # __init__.py can have unused imports (they're exported)
    __init__.py:F401,F403,F405
    # Test files can have unused imports
    test_*.py:F401,F841
    tests/*.py:F401,F841
    # Configuration files
    config.py:E501
    settings.py:E501

# Count number of occurrences
count = True

# Show source code for each error
show-source = True

# Print total number of errors
statistics = True
