[flake8]
# Maximum line length
max-line-length = 120

# Errors and warnings to ignore
extend-ignore =
    # Whitespace before ':' (conflicts with black)
    E203,
    # Line break before binary operator (conflicts with black)
    W503,
    # Import not at top of file (used intentionally in some places)
    E402,
    # Ambiguous variable name (legacy code)
    E741,
    # Trailing whitespace (handled by black)
    W291,
    # Blank line contains whitespace (cosmetic)
    W293,
    # Do not use bare except (legitimate in some error handlers)
    E722,
    # f-string without placeholders (used for templating)
    F541,
    # Line too long (handled by black, but set max-line-length for guidance)
    E501,
    # Missing whitespace around arithmetic operator (style preference)
    E226,
    # Comparison to True/False (sometimes intentional)
    E712,
    # Local variable assigned but never used (often intentional for unpacking)
    F841,
    # Imported but unused (many re-exports)
    F401,
    # Undefined name (dynamic imports and late binding)
    F821,
    # Redefinition (intentional shadowing in some cases)
    F811,F823,F824,
    # Shadow name from outer scope
    F402

# Errors to always check
select =
    E,F,W,C90

# Files and directories to exclude from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    .basedpyright,
    node_modules,
    migrations,
    # Exclude auto-generated files
    *_pb2.py,
    *_pb2_grpc.py

# Complexity - Allow higher complexity for orchestration, health checks, and error handlers
# Some functions legitimately need higher complexity (e.g., comprehensive try-except blocks)
max-complexity = 110

# Per-file ignores for specific patterns
per-file-ignores =
    # __init__.py can have unused imports (they're exported)
    __init__.py:F401,F403,F405,F811,F823
    # Test files can have unused imports and variables
    test_*.py:F401,F841,E712
    tests/*.py:F401,F841,E712
    # Configuration files can have long lines
    config.py:E501,F401
    settings.py:E501,F401
    # API endpoints may have undefined names from dynamic imports
    apps/backend/api/**/*.py:F821,F401,F841
    # Services may have unused imports for type hints
    apps/backend/services/**/*.py:F401,F841
    # Core modules with dynamic behavior
    apps/backend/core/**/*.py:F401,F841,F821
    # Agent implementations
    apps/backend/agents/**/*.py:F401,F841,F821

# Count number of occurrences
count = True

# Show source code for each error
show-source = True

# Print total number of errors
statistics = True
