{
  "name": "toolboxai-solutions-workspace",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "ToolBoxAI Solutions - Educational Technology Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dashboard:dev": "npm -w apps/dashboard run dev",
    "dashboard:build": "npm -w apps/dashboard run build",
    "dashboard:test": "npm -w apps/dashboard run test",
    "dashboard:lint": "npm -w apps/dashboard run lint",
    "verify:dashboard": "npm -w apps/dashboard run test --silent && npm -w apps/dashboard run build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "packageManager": "npm@11.6.1",
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrayGhostDev/ToolboxAI-Solutions.git"
  },
  "keywords": [
    "education",
    "roblox",
    "ai",
    "learning-management-system",
    "edtech"
  ],
  "author": "ToolBoxAI Solutions Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "@esbuild/darwin-arm64": "^0.25.10",
    "@mantine/core": "^8.3.3",
    "dayjs": "^1.11.18",
    "fdir": "^6.5.0",
    "playwright-core": "^1.56.0",
    "prismjs": "^1.30.0",
    "react-syntax-highlighter": "^15.6.6",
    "refractor": "5.0.0",
    "three": "^0.180.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "refractor": "5.0.0"
  }
}
