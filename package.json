{
  "name": "toolboxai-solutions-workspace",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "ToolBoxAI Solutions - Educational Technology Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dashboard:dev": "pnpm --filter apps/dashboard dev",
    "dashboard:build": "pnpm --filter apps/dashboard build",
    "dashboard:test": "pnpm --filter apps/dashboard test",
    "dashboard:lint": "pnpm --filter apps/dashboard lint",
    "verify:dashboard": "pnpm --filter apps/dashboard test --silent && pnpm --filter apps/dashboard build",
    "setup:roles": "pnpm exec tsx scripts/setup-clerk-user-roles.ts",
    "setup:roles:default": "pnpm exec tsx scripts/setup-clerk-user-roles.ts default",
    "setup:roles:list": "pnpm exec tsx scripts/setup-clerk-user-roles.ts list",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker-compose -f infrastructure/docker/compose/docker-compose.yml build",
    "docker:build:prod": "docker-compose -f infrastructure/docker/compose/docker-compose.yml -f infrastructure/docker/compose/docker-compose.prod.yml build",
    "docker:up": "docker-compose -f infrastructure/docker/compose/docker-compose.yml up -d",
    "docker:up:prod": "docker-compose -f infrastructure/docker/compose/docker-compose.yml -f infrastructure/docker/compose/docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/compose/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/compose/docker-compose.yml logs -f",
    "docker:ps": "docker-compose -f infrastructure/docker/compose/docker-compose.yml ps",
    "deploy:frontend": "cd apps/dashboard && vercel --prod",
    "deploy:backend": "curl -X POST -H \"Authorization: Bearer $RENDER_API_KEY\" https://api.render.com/v1/services/$RENDER_SERVICE_ID/deploys",
    "deploy:all": "pnpm run deploy:backend && pnpm run deploy:frontend",
    "sentry:frontend:upload": "cd apps/dashboard && sentry-cli releases new $npm_package_version && sentry-cli releases files $npm_package_version upload-sourcemaps ./dist && sentry-cli releases finalize $npm_package_version",
    "sentry:backend:release": "sentry-cli releases new $npm_package_version && sentry-cli releases deploys $npm_package_version new -e production",
    "health:check": "curl -f http://localhost:8009/health && curl -f http://localhost:5179/",
    "dev": "concurrently \"pnpm run dashboard:dev\" \"cd apps/backend && uvicorn main:app --reload\""
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrayGhostDev/ToolboxAI-Solutions.git"
  },
  "keywords": [
    "education",
    "roblox",
    "ai",
    "learning-management-system",
    "edtech"
  ],
  "author": "ToolBoxAI Solutions Team",
  "license": "MIT",
  "overrides": {
    "three": "^0.160.1",
    "prismjs": "^1.30.0",
    "esbuild": "^0.25.10",
    "undici": "^6.20.0",
    "path-to-regexp": "^8.2.0",
    "@types/node": "^20.14.9",
    "@tiptap/core": "^3.10.5",
    "@tiptap/pm": "^3.10.5"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^20.14.9",
      "@tiptap/core": "^3.10.5",
      "@tiptap/pm": "^3.10.5"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.0",
    "vercel": "^48.8.0"
  },
  "dependencies": {
    "@mantine/core": "^8.3.3",
    "@sentry-internal/browser-utils": "^10.23.0",
    "@sentry-internal/replay": "^10.23.0",
    "dayjs": "^1.11.18",
    "fdir": "^6.5.0",
    "playwright-core": "^1.56.0",
    "prismjs": "^1.30.0",
    "react-syntax-highlighter": "^15.6.6",
    "refractor": "^4.9.0",
    "three": "^0.160.1",
    "typescript": "^5.9.3"
  }
}
