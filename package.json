{
  "name": "toolboxai-solutions-workspace",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "ToolBoxAI Solutions - Educational Technology Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dashboard:dev": "npm -w apps/dashboard run dev",
    "dashboard:build": "npm -w apps/dashboard run build",
    "dashboard:test": "npm -w apps/dashboard test",
    "dashboard:lint": "npm -w apps/dashboard run lint",
    "verify:dashboard": "npm -w apps/dashboard run test --silent && npm -w apps/dashboard run build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrayGhostDev/ToolboxAI-Solutions.git"
  },
  "keywords": [
    "education",
    "roblox",
    "ai",
    "learning-management-system",
    "edtech"
  ],
  "author": "ToolBoxAI Solutions Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "markdownlint-cli2": "^0.18.1",
    "msw": "^2.11.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.42.0"
  }
}