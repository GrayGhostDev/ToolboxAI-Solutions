{
  "name": "toolboxai-solutions-workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "ToolBoxAI Solutions - Educational Technology Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dashboard:dev": "npm -w apps/dashboard run dev",
    "dashboard:build": "npm -w apps/dashboard run build",
    "dashboard:test": "npm -w apps/dashboard test",
    "dashboard:lint": "npm -w apps/dashboard run lint",
    "verify:dashboard": "npm -w apps/dashboard run test --silent && npm -w apps/dashboard run build"
  },
  "engines": {
    "node": ">=20 <23",
    "npm": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ToolboxAI-Solutions.git"
  },
  "keywords": [
    "education",
    "roblox",
    "ai",
    "learning-management-system",
    "edtech"
  ],
  "author": "ToolBoxAI Solutions Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.42.0"
  }
}
