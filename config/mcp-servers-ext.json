{
  "mcpServers": {
    "ToolboxAI-Task-Orchestrator": {
      "command": "python",
      "args": ["-m", "core.mcp.servers.orchestrator_server"],
      "env": {
        "REDIS_URL": "${REDIS_URL}",
        "SLACK_WEBHOOK_URL": "${SLACK_WEBHOOK_URL}",
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_CHANNEL": "${SLACK_CHANNEL}",
        "PUSHER_APP_ID": "${PUSHER_APP_ID}",
        "PUSHER_KEY": "${PUSHER_KEY}",
        "PUSHER_SECRET": "${PUSHER_SECRET}",
        "PUSHER_CLUSTER": "${PUSHER_CLUSTER}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    },
    "ToolboxAI-Review-Gate": {
      "command": "python",
      "args": ["-m", "core.mcp.servers.review_gate_server"],
      "env": {
        "REDIS_URL": "${REDIS_URL}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    },
    "ToolboxAI-File-Cleaner": {
      "command": "python",
      "args": ["-m", "core.mcp.servers.file_cleaner_server"],
      "env": {
        "REDIS_URL": "${REDIS_URL}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    },
    "ToolboxAI-Doc-Updater": {
      "command": "python",
      "args": ["-m", "core.mcp.servers.doc_updater_server"],
      "env": {
        "REDIS_URL": "${REDIS_URL}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    },
    "ToolboxAI-Monitor": {
      "command": "python",
      "args": ["-m", "core.mcp.servers.monitor_server"],
      "env": {
        "REDIS_URL": "${REDIS_URL}",
        "SLACK_WEBHOOK_URL": "${SLACK_WEBHOOK_URL}",
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_CHANNEL": "${SLACK_CHANNEL}",
        "PUSHER_APP_ID": "${PUSHER_APP_ID}",
        "PUSHER_KEY": "${PUSHER_KEY}",
        "PUSHER_SECRET": "${PUSHER_SECRET}",
        "PUSHER_CLUSTER": "${PUSHER_CLUSTER}",
        "LOG_LEVEL": "${LOG_LEVEL:-INFO}"
      }
    }
  }
}
