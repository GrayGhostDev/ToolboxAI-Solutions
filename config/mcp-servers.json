{
  "mcpServers": {
    "orchestrator": {
      "name": "ToolboxAI-Orchestrator-Server",
      "type": "orchestrator",
      "version": "1.0.0",
      "description": "Main orchestrator server for coordinating MCP agents and task distribution",
      "configuration": {
        "host": "0.0.0.0",
        "port": 9877,
        "protocol": "websocket",
        "authentication": {
          "enabled": true,
          "type": "jwt",
          "algorithm": "HS256",
          "expiry": 86400
        },
        "redis": {
          "host": "${REDIS_HOST:-redis}",
          "port": 6379,
          "password": "${REDIS_PASSWORD}",
          "db": 0,
          "keyPrefix": "mcp:orchestrator:"
        },
        "taskQueue": {
          "maxRetries": 3,
          "retryDelay": 5000,
          "taskTimeout": 300000,
          "priorityLevels": ["critical", "high", "normal", "low"],
          "defaultPriority": "normal"
        },
        "agents": {
          "discovery": {
            "enabled": true,
            "interval": 30000,
            "timeout": 5000
          },
          "healthCheck": {
            "enabled": true,
            "interval": 60000,
            "timeout": 10000,
            "unhealthyThreshold": 3
          },
          "loadBalancing": {
            "strategy": "round-robin",
            "stickySession": false,
            "sessionTimeout": 3600
          }
        },
        "capabilities": {
          "taskTypes": [
            "content-generation",
            "quiz-creation",
            "terrain-generation",
            "script-generation",
            "content-review",
            "orchestration",
            "database-management",
            "github-integration",
            "workflow-automation"
          ],
          "maxConcurrentTasks": 50,
          "taskQueueSize": 1000
        },
        "monitoring": {
          "metrics": {
            "enabled": true,
            "port": 9090,
            "path": "/metrics"
          },
          "logging": {
            "level": "${LOG_LEVEL:-info}",
            "format": "json",
            "destination": "stdout"
          },
          "tracing": {
            "enabled": true,
            "service": "mcp-orchestrator",
            "endpoint": "${JAEGER_ENDPOINT}"
          }
        },
        "scaling": {
          "autoScale": true,
          "minReplicas": 1,
          "maxReplicas": 5,
          "targetCPU": 70,
          "targetMemory": 80,
          "scaleUpCooldown": 60,
          "scaleDownCooldown": 300
        }
      },
      "resources": [
        {
          "name": "task-registry",
          "type": "database",
          "uri": "postgresql://${DATABASE_URL}"
        },
        {
          "name": "agent-registry",
          "type": "database",
          "uri": "postgresql://${DATABASE_URL}"
        },
        {
          "name": "workflow-definitions",
          "type": "storage",
          "uri": "file:///data/workflows"
        }
      ],
      "tools": [
        {
          "name": "create_task",
          "description": "Create a new task for agent processing",
          "inputSchema": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "payload": { "type": "object" },
              "priority": { "type": "string" },
              "timeout": { "type": "number" }
            },
            "required": ["type", "payload"]
          }
        },
        {
          "name": "get_task_status",
          "description": "Get the status of a task",
          "inputSchema": {
            "type": "object",
            "properties": {
              "taskId": { "type": "string" }
            },
            "required": ["taskId"]
          }
        },
        {
          "name": "cancel_task",
          "description": "Cancel a running or pending task",
          "inputSchema": {
            "type": "object",
            "properties": {
              "taskId": { "type": "string" },
              "reason": { "type": "string" }
            },
            "required": ["taskId"]
          }
        },
        {
          "name": "list_agents",
          "description": "List all registered agents and their status",
          "inputSchema": {
            "type": "object",
            "properties": {
              "filter": { "type": "string" },
              "status": { "type": "string" }
            }
          }
        },
        {
          "name": "get_metrics",
          "description": "Get orchestrator metrics and statistics",
          "inputSchema": {
            "type": "object",
            "properties": {
              "period": { "type": "string" },
              "metrics": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      ],
      "prompts": [
        {
          "name": "task_distribution",
          "description": "Analyze task and determine optimal agent assignment",
          "arguments": [
            {
              "name": "task",
              "description": "Task details to analyze",
              "required": true
            }
          ]
        },
        {
          "name": "workflow_optimization",
          "description": "Optimize workflow execution plan",
          "arguments": [
            {
              "name": "workflow",
              "description": "Workflow definition to optimize",
              "required": true
            }
          ]
        }
      ]
    },
    "educational-content": {
      "name": "Educational-Content-Server",
      "type": "content",
      "version": "1.0.0",
      "description": "Specialized server for educational content generation and management",
      "configuration": {
        "host": "0.0.0.0",
        "port": 9878,
        "maxConcurrentTasks": 20,
        "capabilities": ["content-generation", "quiz-creation", "assessment-design"],
        "resources": {
          "memory": "2Gi",
          "cpu": "1000m"
        }
      },
      "agentTypes": ["ContentAgent", "QuizAgent", "AssessmentAgent", "AdaptiveLearningAgent"]
    },
    "github-integration": {
      "name": "GitHub-Integration-Server",
      "type": "integration",
      "version": "1.0.0",
      "description": "GitHub integration and CI/CD automation server",
      "configuration": {
        "host": "0.0.0.0",
        "port": 9879,
        "maxConcurrentTasks": 10,
        "capabilities": ["github-integration", "ci-cd", "deployment", "monitoring"],
        "resources": {
          "memory": "1Gi",
          "cpu": "500m"
        }
      },
      "agentTypes": ["DeploymentAgent", "TestCoverageAgent", "SecurityAgent", "MonitoringAgent"]
    },
    "database-management": {
      "name": "Database-Management-Server",
      "type": "database",
      "version": "1.0.0",
      "description": "Database management and operations server",
      "configuration": {
        "host": "0.0.0.0",
        "port": 9880,
        "maxConcurrentTasks": 5,
        "capabilities": ["database-management", "backup", "optimization"],
        "resources": {
          "memory": "1Gi",
          "cpu": "500m"
        }
      },
      "agentTypes": ["DatabaseAgent", "BackupAgent", "OptimizationAgent"]
    }
  },
  "agentRegistry": {
    "discovery": {
      "enabled": true,
      "protocol": "redis",
      "channel": "agent:discovery",
      "heartbeatInterval": 30,
      "ttl": 300
    },
    "healthCheck": {
      "enabled": true,
      "interval": 60,
      "timeout": 10,
      "unhealthyThreshold": 3
    },
    "loadBalancing": {
      "strategies": ["round-robin", "least-connections", "weighted"],
      "defaultStrategy": "round-robin"
    }
  },
  "taskQueue": {
    "redis": {
      "host": "${REDIS_HOST:-redis}",
      "port": 6379,
      "password": "${REDIS_PASSWORD}",
      "db": 1,
      "keyPrefix": "mcp:tasks:"
    },
    "priorities": {
      "critical": 4,
      "high": 3,
      "normal": 2,
      "low": 1
    },
    "retryPolicy": {
      "maxRetries": 3,
      "backoffMultiplier": 2,
      "initialDelay": 1000,
      "maxDelay": 30000
    }
  },
  "security": {
    "authentication": {
      "jwt": {
        "algorithm": "HS256",
        "expiry": 86400,
        "issuer": "toolboxai-mcp"
      }
    },
    "authorization": {
      "rbac": {
        "enabled": true,
        "roles": {
          "admin": ["*"],
          "coordinator": ["task:*", "agent:read"],
          "agent": ["task:execute", "status:update"],
          "readonly": ["status:read", "metrics:read"]
        }
      }
    },
    "rateLimit": {
      "enabled": true,
      "maxRequests": 1000,
      "windowMs": 60000,
      "skipSuccessfulRequests": false
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "prometheus": {
        "enabled": true,
        "port": 9090,
        "path": "/metrics"
      },
      "custom": {
        "taskExecution": true,
        "agentPerformance": true,
        "resourceUtilization": true
      }
    },
    "logging": {
      "level": "${LOG_LEVEL:-info}",
      "format": "json",
      "structured": true,
      "correlation": {
        "enabled": true,
        "traceHeader": "X-Trace-ID"
      }
    },
    "tracing": {
      "enabled": true,
      "jaeger": {
        "endpoint": "${JAEGER_ENDPOINT}",
        "service": "mcp-platform"
      }
    }
  },
  "scaling": {
    "horizontal": {
      "enabled": true,
      "minReplicas": 1,
      "maxReplicas": 10,
      "targetCPU": 70,
      "targetMemory": 80,
      "scaleUpCooldown": 60,
      "scaleDownCooldown": 300
    },
    "vertical": {
      "enabled": false,
      "minCPU": "100m",
      "maxCPU": "2000m",
      "minMemory": "256Mi",
      "maxMemory": "4Gi"
    }
  }
}