# ================================================================================
# TOOLBOXAI PRODUCTION DEPLOYMENT CONFIGURATION
# ================================================================================
# Copy this file to production.env and customize for your environment
# ================================================================================

# Environment Configuration
ENVIRONMENT=production
DEPLOYMENT_MODE=production
DEBUG=false

# Render Configuration
RENDER_SERVICE_NAME=toolboxai-production
RENDER_REGION=oregon

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_STORAGE_BUCKET=toolboxai-backups

# Database Configuration
DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/toolboxai_prod
PRIMARY_DB_URL=postgresql://user:password@primary-db.example.com:5432/toolboxai_prod
READ_REPLICA_URLS_STRING=postgresql://user:password@read-replica-1.example.com:5432/toolboxai_prod,postgresql://user:password@read-replica-2.example.com:5432/toolboxai_prod
WRITE_REPLICA_URLS_STRING=postgresql://user:password@write-replica-1.example.com:5432/toolboxai_prod

# Redis Configuration
REDIS_URL=redis://redis-cluster.example.com:6379
REDIS_PASSWORD=your-redis-password

# Load Balancer Configuration
LB_BACKEND_ENDPOINT=https://api.toolboxai.com
LB_FRONTEND_ENDPOINT=https://toolboxai.com
ORIGIN_IP=10.0.1.100
API_ORIGIN_IP=10.0.1.101

# CDN Configuration
CDN_PROVIDER=cloudflare
CDN_DOMAIN=toolboxai.com
ORIGIN_DOMAIN=origin.toolboxai.com

# CloudFlare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id
# OR use email/key auth:
# CLOUDFLARE_EMAIL=your-email@example.com
# CLOUDFLARE_API_KEY=your-global-api-key

# Render CDN Configuration
# Render provides automatic CDN without configuration needed

# Application Configuration
BACKEND_HEALTH_ENDPOINT=https://api.toolboxai.com/health
FRONTEND_HEALTH_ENDPOINT=https://toolboxai.com/health
API_ENDPOINT=https://api.toolboxai.com/api/v1
WEBSOCKET_ENDPOINT=wss://api.toolboxai.com/ws

# Authentication & Security
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key
SSL_CERT_PATH=/etc/ssl/certs/toolboxai.crt
SSL_KEY_PATH=/etc/ssl/private/toolboxai.key

# Monitoring & Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL=alerts@toolboxai.com
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Configuration
MAX_RESPONSE_TIME_API=2000
MAX_RESPONSE_TIME_FRONTEND=3000
MAX_RESPONSE_TIME_DATABASE=1000
CONNECTION_POOL_SIZE=10
LOAD_TEST_DURATION=60

# Deployment Configuration
ROLLOUT_STRATEGY=canary
ROLLOUT_PERCENTAGE=10
MAX_ROLLOUT_PERCENTAGE=100
ROLLOUT_INCREMENT=20
ROLLBACK_ON_FAILURE=true
HEALTH_CHECK_TIMEOUT=300
HEALTH_CHECK_INTERVAL=10

# Container Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_NAMESPACE=toolboxai
IMAGE_TAG_PREFIX=prod

# Backup Configuration
BACKUP_RETENTION_DAYS=30
DATABASE_BACKUP_SCHEDULE="0 2 * * *"
# Supabase Storage bucket is configured above as SUPABASE_STORAGE_BUCKET

# Cache Configuration
CACHE_WARMER_BASE_URL=https://toolboxai.com
CACHE_WARMER_API_URL=https://api.toolboxai.com
CACHE_WARMER_CDN_URL=https://cdn.toolboxai.com
CACHE_WARMER_CONCURRENT=10
CACHE_WARMER_TIMEOUT=30
CACHE_WARMER_RETRIES=3

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_MONITORING=true

# Third-party Services
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# Resource Limits
CPU_LIMIT=1000m
MEMORY_LIMIT=2Gi
CPU_REQUEST=500m
MEMORY_REQUEST=1Gi

# Scaling Configuration
MIN_REPLICAS=3
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80