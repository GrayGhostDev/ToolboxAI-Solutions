# ==================== SUPABASE CONFIGURATION ====================
# Supabase Project Configuration - Get these from your Supabase dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-settings

# Supabase Database Direct Access (for migrations and direct connections)
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASS=your-database-password

# Supabase Agent System Configuration
SUPABASE_AGENT_SCHEMA=public
SUPABASE_ENABLE_REALTIME=true
SUPABASE_ENABLE_RLS=true
SUPABASE_CONNECTION_TIMEOUT=30
SUPABASE_MAX_RETRIES=3
SUPABASE_RETRY_DELAY=5

# ==================== FEATURE FLAGS FOR SUPABASE ====================
# Enable/disable Supabase features
ENABLE_SUPABASE_INTEGRATION=true
ENABLE_SUPABASE_REALTIME=true
ENABLE_SUPABASE_STORAGE=true
ENABLE_SUPABASE_AUTH=false  # We use our own JWT auth system

# ==================== SUPABASE DEVELOPMENT SETTINGS ====================
# Development-specific Supabase configuration
SUPABASE_DEBUG=true
SUPABASE_LOG_LEVEL=INFO
SUPABASE_MOCK_MODE=false

# ==================== SUPABASE PERFORMANCE SETTINGS ====================
# Connection pooling and performance
SUPABASE_POOL_SIZE=10
SUPABASE_MAX_OVERFLOW=20
SUPABASE_POOL_TIMEOUT=30
SUPABASE_POOL_RECYCLE=3600

# ==================== SUPABASE SECURITY SETTINGS ====================
# Security configuration for Supabase
SUPABASE_SSL_MODE=require
SUPABASE_VERIFY_SSL=true
SUPABASE_ENABLE_AUDIT_LOGGING=true

# ==================== SUPABASE BACKUP SETTINGS ====================
# Backup and recovery configuration
SUPABASE_ENABLE_BACKUPS=true
SUPABASE_BACKUP_RETENTION_DAYS=30
SUPABASE_AUTO_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ==================== SUPABASE MIGRATION SETTINGS ====================
# Migration-specific configuration
SUPABASE_MIGRATION_TIMEOUT=3600
SUPABASE_MIGRATION_BATCH_SIZE=1000
SUPABASE_ENABLE_MIGRATION_LOGGING=true

