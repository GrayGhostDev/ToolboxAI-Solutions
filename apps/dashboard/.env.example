# API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8009
VITE_FASTAPI_URL=http://127.0.0.1:8009
VITE_WS_URL=ws://127.0.0.1:8009

# For Docker development (set VITE_PROXY_TARGET in docker-compose)
# VITE_PROXY_TARGET=http://fastapi-main:8009

# ===== Clerk Authentication (2025) =====
# Get these from your Clerk Dashboard
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
VITE_CLERK_SIGN_IN_URL=/sign-in
VITE_CLERK_SIGN_UP_URL=/sign-up
VITE_CLERK_AFTER_SIGN_IN_URL=/dashboard
VITE_CLERK_AFTER_SIGN_UP_URL=/dashboard
VITE_CLERK_FRONTEND_API_URL=https://your-clerk-domain.clerk.accounts.dev
VITE_ENABLE_CLERK_AUTH=true

# CORS configuration for Clerk
VITE_CLERK_ALLOWED_ORIGINS=http://localhost:5179,http://127.0.0.1:5179

# Legacy Authentication (will be deprecated)
VITE_AUTH_TOKEN_KEY=toolboxai_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=toolboxai_refresh_token

# Roblox Integration
VITE_ROBLOX_API_URL=https://api.roblox.com
VITE_ROBLOX_UNIVERSE_ID=your_universe_id_here

# LMS Integrations
VITE_GOOGLE_CLASSROOM_CLIENT_ID=your_google_client_id_here
VITE_CANVAS_API_TOKEN=your_canvas_token_here

# Pusher Configuration (public keys only)
VITE_PUSHER_KEY=your_pusher_key_here
VITE_PUSHER_CLUSTER=your_cluster_here
VITE_PUSHER_AUTH_ENDPOINT=http://localhost:8009/api/v1/pusher/auth
VITE_PUSHER_ENABLED=true
VITE_PUSHER_FORCE_TLS=true
VITE_PUSHER_DEBUG=false

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_ANALYTICS=true

# Compliance
VITE_COPPA_COMPLIANCE=true
VITE_FERPA_COMPLIANCE=true
VITE_GDPR_COMPLIANCE=true

# Development
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=true

# ===== WebSocket HMR (Hot Module Replacement) =====
# For Docker development
VITE_HMR_HOST=localhost
VITE_HMR_PORT=5179

# ===== Performance =====
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ANALYZE_BUNDLE=false

# ===== Security =====
# Content Security Policy (for production)
VITE_CSP_NONCE=auto-generated

# ===== Testing =====
# Test environment overrides
VITE_TEST_USER_EMAIL=test@example.com

# ===== Localization =====
VITE_DEFAULT_LOCALE=en-US
VITE_ENABLE_I18N=true

# ===== Experimental Features =====
VITE_EXPERIMENTAL_FEATURES=false
VITE_BETA_FEATURES=false

# Note: Never commit sensitive credentials to version control
# Copy this file to .env.local and add your actual values there
