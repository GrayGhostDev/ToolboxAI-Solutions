# ============================================
# TOOLBOXAI DOCKER ENVIRONMENT - EXAMPLE
# ============================================
# Example env for docker compose (do NOT store secrets here)
# Copy to .env and fill values
# For production secrets, use .env.secret (see .env.secret.example)
# ============================================

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=WARNING

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=true

# OpenTelemetry / Jaeger Configuration
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTLP_ENDPOINT=http://jaeger:4318
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318
SERVICE_NAME=toolboxai-backend
SERVICE_VERSION=1.0.0
OTEL_SERVICE_NAME=toolboxai-backend
OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_TRACES_EXPORTER=jaeger
OTEL_METRICS_EXPORTER=none
OTEL_LOGS_EXPORTER=none

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Slack Integration (Alertmanager / Grafana)
# Replace with real values in your local .env
# Keep .env out of version control
SLACK_APP_LEVEL_TOKEN=
SLACK_APP_ID=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
SLACK_VERIFICATION_TOKEN=
SLACK_WEBHOOK_URL_1=
SLACK_WEBHOOK_URL_2=

# Host-Port Overrides
# Adjust these if you have port conflicts
GRAFANA_HOST_PORT=3001
ALERTMANAGER_HOST_PORT=9093

