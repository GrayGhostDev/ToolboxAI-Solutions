{
  "title": "ToolboxAI Application Logs (Loki)",
  "uid": "toolboxai-loki-logs",
  "version": 1,
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by Level",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate({job=\"application\"} |= \"ERROR\" [5m]))",
          "legendFormat": "ERROR",
          "refId": "A"
        },
        {
          "expr": "sum(rate({job=\"application\"} |= \"WARNING\" [5m]))",
          "legendFormat": "WARNING",
          "refId": "B"
        },
        {
          "expr": "sum(rate({job=\"application\"} |= \"INFO\" [5m]))",
          "legendFormat": "INFO",
          "refId": "C"
        },
        {
          "expr": "sum(rate({job=\"application\"} |= \"DEBUG\" [5m]))",
          "legendFormat": "DEBUG",
          "refId": "D"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      }
    },
    {
      "id": 2,
      "title": "Error Logs Stream",
      "type": "logs",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "{job=\"application\"} |= \"ERROR\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true
      }
    },
    {
      "id": 3,
      "title": "Application Logs",
      "type": "logs",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "{job=\"application\"}",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true
      }
    },
    {
      "id": 4,
      "title": "Container Logs",
      "type": "logs",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 18
      },
      "targets": [
        {
          "expr": "{job=\"docker\"}",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true
      }
    },
    {
      "id": 5,
      "title": "API Request Logs",
      "type": "logs",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 28
      },
      "targets": [
        {
          "expr": "{job=\"application\"} |~ \"(GET|POST|PUT|DELETE|PATCH)\" |~ \"/api/\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true
      }
    },
    {
      "id": 6,
      "title": "Database Query Logs",
      "type": "logs",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 28
      },
      "targets": [
        {
          "expr": "{job=\"application\"} |~ \"(SELECT|INSERT|UPDATE|DELETE)\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true
      }
    },
    {
      "id": 7,
      "title": "Agent Activity Logs",
      "type": "logs",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 36
      },
      "targets": [
        {
          "expr": "{job=\"application\"} |~ \"(ContentAgent|OrchestrationAgent|CleanupAgent)\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true
      }
    },
    {
      "id": 8,
      "title": "Authentication & Security Logs",
      "type": "logs",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 44
      },
      "targets": [
        {
          "expr": "{job=\"application\"} |~ \"(auth|login|logout|token|permission|denied)\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "Loki",
        "uid": "Loki"
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": [
    "loki",
    "logs",
    "toolboxai"
  ],
  "templating": {
    "list": [
      {
        "name": "log_level",
        "type": "custom",
        "current": {
          "text": "All",
          "value": ""
        },
        "options": [
          {
            "text": "All",
            "value": ""
          },
          {
            "text": "ERROR",
            "value": "|= \"ERROR\""
          },
          {
            "text": "WARNING",
            "value": "|= \"WARNING\""
          },
          {
            "text": "INFO",
            "value": "|= \"INFO\""
          },
          {
            "text": "DEBUG",
            "value": "|= \"DEBUG\""
          }
        ],
        "query": "All,ERROR,WARNING,INFO,DEBUG"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m"
    ]
  }
}