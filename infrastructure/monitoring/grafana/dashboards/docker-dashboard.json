{
  "title": "ToolBoxAI Docker Production Monitoring",
  "tags": [
    "docker",
    "production",
    "toolboxai"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Container CPU Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"toolboxai-.*\"}[5m]) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU %"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Container Memory Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"toolboxai-.*\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "decmbytes",
          "label": "Memory"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "HTTP Request Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{service=\"backend\"}[5m])",
          "legendFormat": "{{method}} {{path}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Response Time (p95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 5,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{service=\"backend\",status=~\"5..\"}[5m])",
          "legendFormat": "5xx errors",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Database Connections",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends{datname=\"toolboxai\"}",
          "legendFormat": "Active connections",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Redis Memory Usage",
      "type": "singlestat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "refId": "A"
        }
      ],
      "format": "decmbytes"
    },
    {
      "id": 8,
      "title": "Celery Tasks Pending",
      "type": "singlestat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 24
      },
      "targets": [
        {
          "expr": "celery_tasks_total{state=\"PENDING\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "Container Restart Count",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 28
      },
      "targets": [
        {
          "expr": "changes(container_last_seen{name=~\"toolboxai-.*\"}[1h]) > 0",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "Disk Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 28
      },
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_free_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100",
          "legendFormat": "Disk usage %",
          "refId": "A"
        }
      ]
    }
  ]
}