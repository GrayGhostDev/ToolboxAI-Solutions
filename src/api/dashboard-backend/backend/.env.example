# Environment Configuration
ENV=development
DEBUG=true

# Server Configuration  
HOST=0.0.0.0
PORT=8001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/educational_platform
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3002","http://localhost:5173"]

# Roblox Integration
ROBLOX_API_KEY=your-roblox-api-key
ROBLOX_WEBHOOK_SECRET=your-webhook-secret

# WebSocket Configuration
WEBSOCKET_PORT=8002
WEBSOCKET_CORS_ALLOWED_ORIGINS=*

# Redis Configuration (for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/educational_platform.log

# Compliance Settings
COPPA_AGE_LIMIT=13
DATA_RETENTION_DAYS=365
GDPR_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@toolboxai.com

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf","png","jpg","jpeg","doc","docx"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false