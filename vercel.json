{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "toolboxai-solutions",
  "buildCommand": "cd apps/dashboard && npm install && npm run build",
  "outputDirectory": "apps/dashboard/dist",
  "installCommand": "npm install --workspace=apps/dashboard",
  "devCommand": "cd apps/dashboard && npm run dev",
  "framework": "vite",
  "regions": ["iad1"],
  "functions": {
    "apps/dashboard/dist/**/*": {
      "runtime": "nodejs22.x"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "22",
    "NPM_VERSION": "10"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VITE_API_BASE_URL": "@vite_api_base_url",
      "VITE_ENABLE_CLERK_AUTH": "@vite_enable_clerk_auth",
      "VITE_CLERK_PUBLISHABLE_KEY": "@vite_clerk_publishable_key",
      "VITE_ENABLE_PUSHER": "@vite_enable_pusher",
      "VITE_PUSHER_KEY": "@vite_pusher_key",
      "VITE_PUSHER_CLUSTER": "@vite_pusher_cluster"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "$VITE_API_BASE_URL/api/:path*"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
