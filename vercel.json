{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "toolboxai-solutions",
  "buildCommand": "pnpm --filter ./apps/dashboard build",
  "outputDirectory": "apps/dashboard/dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "devCommand": "pnpm --filter ./apps/dashboard dev",
  "framework": "vite",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "ENABLE_EXPERIMENTAL_COREPACK": "1",
    "NODE_VERSION": "22",
    "VITE_API_URL": "https://toolboxai-backend-8j12.onrender.com",
    "VITE_ENVIRONMENT": "production",
    "VITE_BYPASS_AUTH": "false"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "$VITE_API_BASE_URL/api/:path*"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
