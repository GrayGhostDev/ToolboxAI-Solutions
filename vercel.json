{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "toolboxai-solutions",
  "buildCommand": "cd apps/dashboard && npm run build",
  "outputDirectory": "apps/dashboard/dist",
  "installCommand": "npm install --workspace=apps/dashboard --include=optional --no-package-lock",
  "devCommand": "cd apps/dashboard && npm run dev",
  "framework": "vite",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "22",
    "NPM_VERSION": "10"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "$VITE_API_BASE_URL/api/:path*"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
