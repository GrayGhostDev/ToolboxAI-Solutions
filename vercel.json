{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "cd apps/dashboard && npm run build",
  "outputDirectory": "apps/dashboard/dist",
  "installCommand": "npm ci --include=dev --workspaces",
  "framework": null,
  "devCommand": "npm run dashboard:dev",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/",
      "permanent": false
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://toolboxai-solutions.onrender.com/api/:path*"
    },
    {
      "source": "/:path((?!api|assets|_next|favicon.ico).*)*",
      "destination": "/index.html"
    }
  ],

  "trailingSlash": false,

  "cleanUrls": true,

  "github": {
    "silent": false,
    "autoAlias": true
  }
}
