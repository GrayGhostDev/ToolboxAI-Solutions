          "OAuth2 authentication",
          "Template selection",
          "Real-time content generation",
          "Asset deployment",
          "Progress tracking"
        ]
      },
      "game_server": {
        "location": "roblox/scripts/ServerScripts/Main.server.lua",
        "purpose": "Core game server logic",
        "responsibilities": [
          "Player authentication",
          "Session management",
          "Content loading",
          "Progress tracking",
          "Analytics collection"
        ]
      },
      "backend_integration": {
        "location": "apps/backend/roblox_server.py",
        "purpose": "Python backend for Roblox communication",
        "protocols": ["WebSocket", "HTTP REST", "Pusher Channels"]
      },
      "dashboard": {
        "location": "apps/dashboard/src/components/roblox/",
        "purpose": "React dashboard for teacher management",
        "components": [
          "RobloxEnvironmentPreview",
          "RobloxSessionManager",
          "TeacherRobloxDashboard"
        ]
      }
    }
  },

