  "api_endpoints": {
    "roblox": {
      "base": "/api/v1/roblox",
      "endpoints": [
        {
          "path": "/auth/login",
          "method": "GET",
          "purpose": "Initiate OAuth login"
        },
        {
          "path": "/auth/callback",
          "method": "GET",
          "purpose": "Handle OAuth callback"
        },
        {
          "path": "/push/{content_id}",
          "method": "POST",
          "purpose": "Push content to Roblox"
        },
        {
          "path": "/sessions",
          "method": "GET",
          "purpose": "Get active sessions"
        },
        {
          "path": "/templates",
          "method": "GET",
          "purpose": "Get available templates"
        },
        {
          "path": "/analytics/{world_id}",
          "method": "GET",
          "purpose": "Get world analytics"
        },
        {
          "path": "/sync/{world_id}",
          "method": "POST",
          "purpose": "Sync world data"
        }
      ]
    },
    "websocket": {
      "base": "ws://localhost:8008",
      "endpoints": [
        "/ws/roblox",
        "/ws/content",
        "/ws/agent/{agent_id}"
      ]
    }
  },

